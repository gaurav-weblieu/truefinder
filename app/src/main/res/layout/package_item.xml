<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/background_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/packageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tvPackageTitle"
            android:fontFamily="@font/volkhov"
            android:gravity="center"
            android:padding="10dp"
            android:text="Package Name"
            android:textColor="@color/primary"
            android:textSize="20sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/purple_700"/>

        <TextView
            android:id="@+id/tvPackageExpireTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expiry Date"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="5dp"
            android:layout_below="@+id/tvPackagePriceTitle"/>

        <TextView
            android:id="@+id/packagePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_below="@+id/tvPackageTitle"
            android:layout_toRightOf="@+id/tvPackagePriceTitle"/>


        <TextView
            android:id="@+id/packageleadCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:padding="5dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_baseline_calculate_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="42dp"
            android:background="@drawable/buy_now"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="BUY NOW"
            android:textColor="@color/white" />

    </LinearLayout>



</androidx.cardview.widget.CardView>